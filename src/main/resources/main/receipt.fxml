<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<VBox fx:id="root"
      xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.hcs.weighbridge.ui.ReceiptController"
      spacing="10">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <!-- ================= ROW 1 : HEADER ================= -->
    <VBox fx:id="rowHeader" alignment="CENTER">
        <Label text="HCS WEIGH BRIDGE"
               style="-fx-font-size:16px; -fx-font-weight:bold;"/>
        <Label text="Tel: 0771234567 | info@hcs.lk"
               style="-fx-font-size:10px;"/>
    </VBox>

    <Separator/>

    <!-- ================= ROW 2 : MAIN DATA ================= -->
    <HBox fx:id="rowMain" spacing="30">

        <!-- LEFT COLUMN -->
        <GridPane hgap="10" vgap="6">
            <Label text="Date In:"/><Label fx:id="dateInLbl" GridPane.columnIndex="1"/>
            <Label text="Time In:" GridPane.rowIndex="1"/><Label fx:id="timeInLbl" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
            <Label text="Vehicle No:" GridPane.rowIndex="2"/><Label fx:id="lorryLbl" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
            <Label text="First Weight:" GridPane.rowIndex="3"/><Label fx:id="firstWeightLbl" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
        </GridPane>

        <!-- RIGHT COLUMN -->
        <GridPane hgap="10" vgap="6">
            <Label text="Receipt No:"/><Label fx:id="receiptLbl" GridPane.columnIndex="1"/>
            <Label text="Customer:" GridPane.rowIndex="1"/><Label fx:id="customerLbl" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
            <Label text="Product:" GridPane.rowIndex="2"/><Label fx:id="productLbl" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
            <Label text="Driver:" GridPane.rowIndex="3"/><Label fx:id="driverLbl" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
        </GridPane>

    </HBox>

    <Separator fx:id="sepAfterMain"/>

    <!-- ================= ROW 3 : OUT DATA ================= -->
    <HBox fx:id="rowOut" spacing="30">

        <GridPane hgap="10" vgap="6">
            <Label text="Date Out:"/><Label fx:id="dateOutLbl" GridPane.columnIndex="1"/>
            <Label text="Time Out:" GridPane.rowIndex="1"/><Label fx:id="timeOutLbl" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
        </GridPane>

        <GridPane hgap="10" vgap="6">
            <Label text="Second Weight:"/><Label fx:id="secondWeightLbl" GridPane.columnIndex="1"/>
        </GridPane>

    </HBox>

    <Separator fx:id="sepAfterOut"/>

    <!-- ================= ROW 4 : NET WEIGHT ================= -->
    <HBox fx:id="rowNet" alignment="CENTER">
        <Label text="NET WEIGHT : "
               style="-fx-font-size:14px; -fx-font-weight:bold;"/>
        <Label fx:id="netWeightLbl"
               style="-fx-font-size:18px; -fx-font-weight:bold;"/>
    </HBox>

    <Separator/>

    <!-- ================= ROW 5 : SIGNATURES ================= -->
    <GridPane fx:id="rowSign" hgap="40">
        <VBox alignment="CENTER">
            <Label text="______________________"/>
            <Label text="Weighbridge Operator"/>
        </VBox>
        <VBox alignment="CENTER" GridPane.columnIndex="1">
            <Label text="______________________"/>
            <Label text="Security"/>
        </VBox>
        <VBox alignment="CENTER" GridPane.columnIndex="2">
            <Label text="______________________"/>
            <Label text="Driver"/>
        </VBox>
    </GridPane>

</VBox>
